<% layout('layouts/boilerplate') %>

<h1 class="text-center m-3">
  <%= boardgame.title %>
</h1>

<div class="row">
  <div class="col-6">

    <div class="card">
      <img src="<%= boardgame.images %>" class="card-img-top" alt="<%= boardgame.title %> Cover Art">

      <div class="card-body">
        <h5 class="card-title"><%= boardgame.title %></h5>
        <p class="card-text fst-italic text-muted">
          <%= boardgame.description %>
        </p>


      </div>

      <form action="/show/<%= boardgame.id %>?_method=DELETE" method="POST">
        <div class="card-footer">
          <button class="btn btn-danger">Delete</button>
        </div>
      </form>
    </div>

  </div>


  <div class="col-6">
    <h5 class="text-center">
      Playthroughs
    </h5>
    <div class="card">
      <div class="card-body">
        <h5 class="card-title text-center">

        </h5>
      </div>
    </div>
  </div>

</div>